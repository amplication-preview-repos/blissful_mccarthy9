datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  createdAt     DateTime       @default(now())
  description   String?
  forecastLines ForecastLine[]
  id            String         @id @default(cuid())
  name          String?
  updatedAt     DateTime       @updatedAt
}

model ForecastLine {
  createdAt       DateTime  @default(now())
  forecastingTime DateTime?
  id              String    @id @default(cuid())
  product         Product?  @relation(fields: [productId], references: [id])
  productId       String?
  quantity        Int?
  updatedAt       DateTime  @updatedAt
  user            User?     @relation(fields: [userId], references: [id])
  userId          String?
}

model User {
  createdAt     DateTime       @default(now())
  email         String?        @unique
  firstName     String?
  forecastLines ForecastLine[]
  id            String         @id @default(cuid())
  lastName      String?
  password      String
  roles         Json
  updatedAt     DateTime       @updatedAt
  username      String         @unique
}
